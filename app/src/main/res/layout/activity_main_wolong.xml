<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_homepage">

    <!--电压-->
    <TextView
        android:id="@+id/voltage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px30"
        android:layout_marginTop="@dimen/px100"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/px20"
        android:text="0 V"
        android:textColor="@color/white"
        android:textSize="@dimen/px40"/>

    <!--功率-->
    <TextView
        android:id="@+id/power"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px30"
        android:layout_marginTop="@dimen/px280"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/px20"
        android:text="0 W"
        android:textColor="@color/white"
        android:textSize="@dimen/px40"/>

    <!--电流-->
    <TextView
        android:id="@+id/electricity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px30"
        android:layout_marginTop="@dimen/px455"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/px20"
        android:text="0 A"
        android:textColor="@color/white"
        android:textSize="@dimen/px40"/>

    <!--温度-->
    <TextView
        android:id="@+id/temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/px30"
        android:layout_marginTop="@dimen/px100"
        android:gravity="right"
        android:paddingRight="@dimen/px20"
        android:text="0 ℃"
        android:textColor="@color/white"
        android:textSize="@dimen/px40"/>

    <!--版本-->
    <TextView
        android:id="@+id/version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/px30"
        android:layout_marginTop="@dimen/px280"
        android:gravity="center_vertical"
        android:paddingRight="@dimen/px100"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="@dimen/px40"/>

    <!--设置-->
    <ImageView
        android:id="@+id/setting"
        android:layout_width="@dimen/px319"
        android:layout_height="@dimen/px152"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/px12"
        android:layout_marginRight="@dimen/px28"
        android:background="@drawable/selector_setting"
        android:clickable="true"/>

    <!--提示信息-->
    <ImageView
        android:id="@+id/tip"
        android:layout_width="@dimen/px404"
        android:layout_height="@dimen/px69"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/px30"
        android:background="@drawable/error_info"
        android:visibility="gone"/>

    <!--转速-->
    <TextView
        android:id="@+id/rpm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="@dimen/px40"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/px12"
        android:orientation="horizontal">


        <!--底部按钮-->
        <LinearLayout
            android:id="@+id/ll_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/px12"
            android:orientation="horizontal"
            android:visibility="visible">

            <Button
                android:id="@+id/btn_special"
                android:layout_width="@dimen/px88"
                android:layout_height="@dimen/px88"
                android:background="@drawable/shape_special_btn_bg"
                android:text="special"
                android:textColor="@color/black"
                android:textSize="@dimen/px20"/>

            <Button
                android:id="@+id/btn_cw"
                android:layout_width="@dimen/px88"
                android:layout_height="@dimen/px88"
                android:layout_marginLeft="@dimen/px10"
                android:background="@drawable/bg_btn_nofocus"
                android:text="CW"
                android:textColor="@color/black"
                android:textSize="@dimen/px20"/>

            <Button
                android:id="@+id/btn_ccw"
                android:layout_width="@dimen/px88"
                android:layout_height="@dimen/px88"
                android:layout_marginLeft="@dimen/px10"
                android:background="@drawable/bg_btn_nofocus"
                android:text="CCW"
                android:textColor="@color/black"
                android:textSize="@dimen/px20"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_special"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/px12"
            android:orientation="horizontal"
            android:visibility="gone">

            <Button
                android:id="@+id/btn_normal"
                android:layout_width="@dimen/px88"
                android:layout_height="@dimen/px88"
                android:background="@drawable/shape_special_btn_bg"
                android:text="Normal"
                android:textColor="@color/black"
                android:textSize="@dimen/px20"/>

            <Button
                android:id="@+id/btn_10000"
                android:layout_width="@dimen/px88"
                android:layout_height="@dimen/px88"
                android:layout_marginLeft="@dimen/px10"
                android:background="@drawable/bg_btn_nofocus"
                android:text="10000"
                android:textColor="@color/black"
                android:textSize="@dimen/px20"/>

            <Button
                android:id="@+id/btn_16000"
                android:layout_width="@dimen/px88"
                android:layout_height="@dimen/px88"
                android:layout_marginLeft="@dimen/px10"
                android:background="@drawable/bg_btn_nofocus"
                android:text="16000"
                android:textColor="@color/black"
                android:textSize="@dimen/px20"/>

            <Button
                android:id="@+id/btn_cycle"
                android:layout_width="@dimen/px88"
                android:layout_height="@dimen/px88"
                android:layout_marginLeft="@dimen/px10"
                android:background="@drawable/bg_btn_nofocus"
                android:text="Cycle"
                android:textColor="@color/black"
                android:textSize="@dimen/px20"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_stop"
            android:layout_width="@dimen/px88"
            android:layout_height="@dimen/px88"
            android:layout_marginLeft="@dimen/px10"
            android:background="@drawable/bg_btn_nofocus"
            android:text="stop"
            android:textColor="@color/black"
            android:textSize="@dimen/px20"/>

    </LinearLayout>

    <com.miracle.um_base_common.view.RotateImageView
        android:id="@+id/rotateImageView"
        android:layout_width="@dimen/px314"
        android:layout_height="@dimen/px314"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tipTextView"
        android:layout_width="@dimen/px300"
        android:layout_height="@dimen/px100"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/px20"
        android:background="@drawable/shape_tip_bg"
        android:gravity="center"
        android:textColor="@color/tip_text_color"
        android:textSize="@dimen/px30"
        android:visibility="gone"/>
</RelativeLayout>
