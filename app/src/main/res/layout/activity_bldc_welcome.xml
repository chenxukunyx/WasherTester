<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background_color">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:text="BLDC变频FCT测试"
        android:textColor="@color/white"
        android:textSize="@dimen/px40"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="113dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="P/N："
            android:textColor="@color/white"
            android:textSize="@dimen/px40"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_pn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="5dp"
            android:text="XXXXXXXX"
            android:textColor="@color/white"
            android:textSize="@dimen/px40"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="163dp">

        <Button
            android:id="@+id/btn_variable_frequency_broad"
            android:layout_width="@dimen/px170"
            android:layout_height="@dimen/px80"
            android:layout_centerHorizontal="true"
            android:background="@drawable/shape_button_bg"
            android:text="变频板"
            android:textColor="@color/white"
            android:textSize="@dimen/px30"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btn_motor"
            android:layout_width="@dimen/px170"
            android:layout_height="@dimen/px80"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            android:background="@drawable/shape_button_bg"
            android:text="电机"
            android:textColor="@color/white"
            android:textSize="@dimen/px30"
            android:textStyle="bold"/>

    </LinearLayout>


    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="@dimen/px130"
        android:layout_height="@dimen/px90"
        android:text="确认"
        android:textColor="@color/black"
        android:textSize="@dimen/px30"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="65dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="上海绿联软件股份有限公司"
        android:textSize="@dimen/px30"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"/>
</RelativeLayout>